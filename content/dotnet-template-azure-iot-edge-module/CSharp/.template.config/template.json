{
    "author": "Summer Sun",
    "classifications": ["Console"],
    "name": "Azure IoT Edge Module Generator",
    "identity": "Azure.IoT.Edge.Module.Generator.CSharp",
    "groupIdentity": "Azure.IoT.Edge.Module.Generator",
    "shortName": "aziotedgemodule",
    "tags": {
        "language": "C#",
        "type": "project"
    },
    "preferNameDirectory": "true",
    "sourceName": "SampleModule",
    "primaryOutputs": [{
        "path": ""
    }],
    "symbols": {
        "target": {
            "type": "parameter",
            "datatype": "choice",
            "defaultValue": "M",
            "choices": [{
                    "choice": "M",
                    "description": "custom module"
                },
                {
                    "choice": "D",
                    "description": "deployment json file"
                },
                {
                    "choice": "R",
                    "description": "routes json file"
                }
            ]
        },
        "skipRestore": {
            "type": "parameter",
            "datatype": "bool",
            "defaultValue": "false"
        },
        "windows-x64": {
            "type": "parameter",
            "datatype": "bool",
            "defaultValue": "true"
        },
        "windows-x86": {
            "type": "parameter",
            "datatype": "bool",
            "defaultValue": "false"
        },
        "linux-x64": {
            "type": "parameter",
            "datatype": "bool",
            "defaultValue": "false"
        },
        "linux-x86": {
            "type": "parameter",
            "datatype": "bool",
            "defaultValue": "false"
        },
        "linux-arm32": {
            "type": "parameter",
            "datatype": "bool",
            "defaultValue": "false"
        }
    },
    "sources": [{
        "exclude": ["Docker/**/*", ".template.config/*", "deployment.json", "routes.json"],
        "modifiers": [{
                "condition": "(target == 'D')",
                "include": ["deployment.json"]
            },
            {
                "condition": "(target == 'R')",
                "include": ["routes.json"]
            },
            {
                "condition": "(target !='M')",
                "exclude": [
                    "Program.cs", "SampleModule.csproj"
                ]
            },
            {
                "condition": "(target =='M' && windows-x64)",
                "include": [
                    "Docker/windows-x64/Dockerfile"
                ]
            },
            {
                "condition": "(target =='M' && windows-x86)",
                "include": [
                    "Docker/windows-x86/Dockerfile"
                ]
            },
            {
                "condition": "(target =='M' && linux-x64)",
                "include": [
                    "Docker/linux-x64/Dockerfile"
                ]
            },
            {
                "condition": "(target =='M' && linux-x86)",
                "include": [
                    "Docker/linux-x86/Dockerfile"
                ]
            },
            {
                "condition": "(target =='M' && linux-arm32)",
                "include": [
                    "Docker/linux-arm32/Dockerfile"
                ]
            }
        ]
    }],
    "postActions": [{
        "condition": "(!skipRestore && target == 'M')",
        "description": "Restore NuGet packages required by this project.",
        "manualInstructions": [{
            "text": "Run 'dotnet restore'"
        }],
        "actionId": "210D431B-A78B-4D2F-B762-4ED3E3EA9025",
        "continueOnError": true
    }]
}