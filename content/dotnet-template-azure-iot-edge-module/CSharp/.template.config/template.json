{
    "author": "Summer Sun",
    "classifications": ["Console"],
    "name": "Azure IoT Edge Module Generator",
    "identity": "Azure.IoT.Edge.Module.Generator.CSharp",
    "groupIdentity": "Azure.IoT.Edge.Module.Generator",
    "shortName": "aziotedgemodule",
    "tags": {
        "language": "C#",
        "type": "project"
    },
    "preferNameDirectory": "true",
    "sourceName": "SampleModule",
    "primaryOutputs": [{
        "path": ""
    }],
    "symbols": {
        "target": {
            "type": "parameter",
            "datatype": "choice",
            "defaultValue": "A",
            "choices": [
                {
                    "choice": "A",
                    "description": "custom module and all required files"
                },
                {
                    "choice": "M",
                    "description": "custom module"
                },
                {
                    "choice": "D",
                    "description": "deployment json file"
                },
                {
                    "choice": "R",
                    "description": "routes json file"
                }
            ]
        },
        "skipRestore": {
            "type": "parameter",
            "datatype": "bool",
            "defaultValue": "false"
        },
        "linux-x64": {
            "type": "parameter",
            "datatype": "bool",
            "defaultValue": "true"
        }
    },
    "sources": [{
        "exclude": ["Docker/**/*", ".template.config/*", "deployment.json", "routes.json", "bin/**/*", "obj/**/*"],
        "modifiers": [{
                "condition": "(target == 'A' || target == 'D')",
                "include": ["deployment.json"]
            },
            {
                "condition": "(target == 'A' || target == 'R')",
                "include": ["routes.json"]
            },
            {
                "condition": "(target !='A' && target != 'M')",
                "exclude": [
                    "Program.cs", "SampleModule.csproj", ".gitignore"
                ]
            },
            {
                "condition": "((target == 'A' || target =='M') && linux-x64)",
                "include": [
                    "Docker/linux-x64/Dockerfile"
                ]
            }
        ]
    }],
    "postActions": [{
        "condition": "(!skipRestore && (target == 'M' || target == 'A'))",
        "description": "Restore NuGet packages required by this project.",
        "manualInstructions": [{
            "text": "Run 'dotnet restore -s https://www.myget.org/F/aziot-device-sdk/api/v3/index.json'"
        }],
        "actionId": "210D431B-A78B-4D2F-B762-4ED3E3EA9025",
        "continueOnError": true
    }]
}
